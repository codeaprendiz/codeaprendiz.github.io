kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1
metadata:
 name: role-SUBSTITUTE_CLUSTER_NAME-SUBSTITUTE_GROUPNAME-SUBSTITUTE_ACCESS_TYPE
rules:
- apiGroups: [""]
  resources: ["pods", "services"]
  verbs: ["get", "list"]
- apiGroups: ["apps"]
  resources: ["deployments"]
  verbs: ["get", "list"]
